  "scripts": {
    "watch": "dotenv -e .env.development -- ts-node-dev --ignore-watch client --respawn --transpile-only server/src/server.ts",
    "build:dev": "dotenv -e .env.development npx tsc && npm ci --prefix client && npm run build --prefix client",
    "start:dev": "dotenv -e .env.development node server/dist/src/server.js",
    "build:prod": "npm ci && npx tsc && npx prisma migrate deploy && npm ci --prefix client && npm run build --prefix client",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "start:prod": "node server/dist/src/server.js"
  },
